<nav class="navigation" role="navigation">
    <div class="navigation--inner">
        <div class="navigation--brand-mobile">
            <a href="{{ path('home') }}" class="navigation--brandlink navigation--brandlink-mobile">{{ app_name }}</a>
        </div>
        <div class="navigation--brand">
            <a href="{{ path('home') }}" class="navigation--brandlink" role="menuitem">{{ app_name }}</a>
            <i class="navigation--menutoggle fa fa-navicon"></i>
        </div>
        <ul class="navigation--links" role="menubar">
            {% spaceless %}
                {% for item in navigation.getPrimary() %}
                    {{ nav.nav_link(item) }}
                {% endfor %}
            {% endspaceless %}
        </ul>

        <div class="navigation--search">
            <form action="{{ path('search') }}" method="POST" class="navigation--search--container">
                <label for="search-box" title="Search" class="navigation--search--container--label"></label>
                <input type="text" class="navigation--search--container--input" name="term" id="search-box">
            </form>
        </div>

    </div>
</nav>
