{% extends 'KorobiWebBundle::layout.html.twig' %}

{% set page_title = 'Search' %}

{% block body %}
    <h1>Search</h1>

    <form action="" method="post" class="vertical-form">
        <label for="message">Message</label>
        <input type="text" name="message" id="message">
        <label for="channel">Channel</label>
        <input type="text" name="channel" id="channel">
        <label for="actor_name">Name</label>
        <input type="text" name="actor_name" id="actor_name">
        <label for="type">Type</label>
        <select name="type" id="type" multiple>
            {% for n in ['join', 'quit', 'part', 'message', 'mode', 'topic', 'kick', 'action'] %}
                <option value="{{ n | upper }}">{{ n | capitalize }}</option>
            {% endfor %}
        </select>
        <label for="start">Start</label>
        <input type="date" name="start" id="start">
        <label for="end">End</label>
        <input type="date" name="end" id="end">
        <input type="submit" class="button-flat-primary button" value="Search">
    </form>

    <div style="margin-top: 1em;">
        {% for i, v in plz %}
            {{ dump(i, v) }}
        {% endfor %}
    </div>
{% endblock %}
