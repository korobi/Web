{% extends 'KorobiWebBundle::layout.html.twig' %}

{% set page_title = 'Networks' %}

{% block head %}
    <meta name="description" content="IRC networks which are supported by Korobi.">
{% endblock head %}

{% block body %}
    <h1>Networks</h1>
    {% if all_networks_private %}
    <p>Sorry, but it appears as if all networks found have no public channels.</p>
    {% else %}
    <table>
        <thead>
        <tr>
            <th>Network</th>
        </tr>
        </thead>
        <tbody>
        {% for name, url in networks %}
            <tr>
                <td><a href="{{ url }}">{{ name }}</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% endif %}
{% endblock %}
