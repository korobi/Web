{% extends 'KorobiWebBundle::layout.html.twig' %}

{% set page_title = network_name %}

{% block head %}
    <meta name="description" content="Channels on the {{ network_name }} IRC network.">
{% endblock head %}

{% block body %}
    <h1>{{ network_name }}</h1>
    {% if all_channels_private %}
        <p>Sorry, but it appears as if all channels on this network are private.</p>
    {% else %}
        <table class="channel-list">
            <thead>
            <tr>
                <th>Channel</th>
                <th>Jump To</th>
            </tr>
            </thead>
            <tbody>
            {% for name, data in channels %}
                <tr>
                    <td><a href="{{ data.url }}">{{ name }}</a></td>
                    <td>
                        {% if data.db.logsEnabled %}
                            <a href="{{ data.url }}logs/" class="button button-flat-primary button-rounded">Logs <i class="fa fa-comments-o"></i></a>
                            <a href="{{ data.url }}logs/tail/30/" class="button button-flat-primary button-rounded">Tail <i class="fa fa-ellipsis-h"></i></a>
                        {% endif %}
                        {% if data.db.commandsEnabled %}
                            <a href="{{ data.url }}commands/" class="button button-flat-primary button-rounded">Commands <i class="fa fa-terminal"></i></a>
                        {% endif %}
                        {% if data.db.logsEnabled %}
                            <a href="{{ data.url }}stats/" class="button button-flat-primary button-rounded">Stats <i class="fa fa-area-chart"></i></a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}
