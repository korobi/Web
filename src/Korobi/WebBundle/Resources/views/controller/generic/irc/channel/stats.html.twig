{% extends 'KorobiWebBundle::layout.html.twig' %}

{% set page_title = channel_name ~ ' on ' ~ network_name ~ ' - Stats' %}

{% block head %}
    <meta name="description" content="Chat statistics for IRC channel {{ channel_name }} on network {{ network_name }}.">
{% endblock head %}

{% block body %}
    <h1>Stats for {{ channel_name }} on {{ network_name }}</h1>
    <div class="logs">
        {% if data is empty %}
            <div class="empty">Sorry, no stats are available for the requested channel.</div>
        {% else %}
            {% autoescape false %}
                {{ data|raw }}
            {% endautoescape %}
        {% endif %}
    </div>
{% endblock %}
